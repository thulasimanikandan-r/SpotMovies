<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.mani.udacity.project.popularmovie.activities.MovieDetailsScreenActivity">

        <TextView
            android:id="@+id/tv_movie_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBlue"
            android:maxLines="3"
            android:minLines="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/iv_movie_details_poster"
                android:layout_width="160dp"
                android:layout_height="185dp"
                android:contentDescription="@string/image_content_description"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_movie_details_release_date_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/iv_movie_details_poster"
                android:text="@string/tv_release_date"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_movie_details_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/tv_movie_details_release_date_static"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_movie_details_user_rating_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_movie_details_release_date"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/iv_movie_details_poster"
                android:text="@string/tv_ratings"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_movie_details_user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_movie_details_release_date"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/tv_movie_details_user_rating_static"
                android:gravity="center"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_movie_details_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="10"
            android:textAlignment="inherit"
            android:textSize="14sp" />


    </LinearLayout>
</ScrollView>